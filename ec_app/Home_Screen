class _HomePageState extends State<HomePage> {
  List<Ctg>list=[
    Ctg(text: 'Flash Deal', path: 'assets/icons/Flash Icon.svg'),
    Ctg(text: 'Bill', path: 'assets/icons/Bill Icon.svg'),
    Ctg(text: 'Game', path: 'assets/icons/Game Icon.svg'),
    Ctg(text: 'Daily Gift', path: 'assets/icons/Gift Icon.svg'),
    Ctg(text: 'More', path: 'assets/icons/Discover.svg'),
  ];

  List<Product>list1=[
Product(productname: 'Wireless Controller\n for PSâ„¢', productimage: 'assets/images/Image Popular Product 1.png', productprice: '\%64.99'),
    Product(productname: 'Nike Sport White-\nMan Pant', productimage:'assets/images/Image Popular Product 2.png', productprice:'\$50.5'),
    Product(productname: 'I Think it\s A Bike\n Helmet', productimage: 'assets/images/Image Popular Product 3.png', productprice:'\$36.5')
  ];

  int currentpage=0;
  @override
  Widget build(BuildContext context) {
    return Scaffold(
      bottomNavigationBar: NavigationBar(
       onDestinationSelected: (int index){
         setState(() {
           currentpage=index;
         });
       },
      backgroundColor: Color(0xFFffffff),
        indicatorColor: Colors.white,
        selectedIndex: currentpage,
        destinations: [
          NavigationDestination(icon: SvgPicture.asset('assets/icons/Shop Icon.svg'), label: ''),
          NavigationDestination(icon: SvgPicture.asset('assets/icons/Heart Icon.svg'), label: ''),
          NavigationDestination(icon: SvgPicture.asset('assets/icons/Chat bubble Icon.svg'), label: ''),
          NavigationDestination(icon: SvgPicture.asset('assets/icons/User Icon.svg'), label: ''),
        ],
      ),
      backgroundColor: const Color(0xFFffffff),
      body:[ Home(list: list, list1: list1),const FavPage(),const ChatBubble(),const UserProfile()][currentpage],

    );
  }
}
class FavPage extends StatelessWidget {
  const FavPage({super.key});

  @override
  Widget build(BuildContext context) {
    return SafeArea(
      child: Scaffold(
        backgroundColor: Colors.deepPurple,
        body: Text('FAV PAGE',
          style: TextStyle(
              color: Colors.white
          ),
        ),
      ),
    );
  }
}



